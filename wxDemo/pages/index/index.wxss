/* pages/index/index.wxss */

/* 导航栏的布局 */
.flx_navigationbar{
 width: 750rpx;
 height:160rpx;
 background-color: #399DDB;
 /* position: relative; */
 display: flex;
 align-items: center;  
 flex-direction: row;
}
/* 头部的图片 */
.navImage{
  width: 60rpx;
  height: 60rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  margin-left: 18rpx;
}
/* 头部文字样式 */
.navImageText{
 text-align: center;
 margin-left: 10rpx;
 font-size: 36rpx;
 color: rgba(255, 255, 255, 1);
}
/*横向buttons  */
.h_buttons{
display: flex;
flex: none;
height: 80rpx; 
background: #399DDB;  
align-items: center;  
flex-direction: row;
}
/*显示的文本 */
.h_text{
flex: 1; 
text-align: center;   
font-size: 30rpx;
margin: 0 auto;
color: white;
}
/* 选中时候的短横线 */
.h_line{
 width: 30rpx;
 height: 5rpx;
 background-color: #A2CEEB;
 margin:5rpx auto 5rpx auto;   
}
/* 装载图片控件的容器 */
.imageContainer{
  height: 350rpx;
  width: 750rpx;
}
/* 图片view */
.img{
  position: relative;
  margin: 32rpx;
  width: 686rpx;
  height: 286rpx;
}
/* 图片上的热门文字 */
.tipText{
 position: absolute;
 background-color: #B54C42;
 color: white;
 font-size: 20rpx;
 text-align: center;
 width: 60rpx;
 height: 45rpx;
 line-height: 45rpx;
 border-bottom-left-radius: 15rpx;
 right: 0rpx;
 top: 0rpx;
}
.tipTitle{
  position: absolute;
  bottom: 60rpx;
  color: #4D4E50;
  text-align: left;
  margin-left: 10rpx;
  font-size: 25rpx;
}
.tipSourceTime{
  position: absolute;
  bottom: 10rpx;
  color: #989A9E;
  text-align: left;
  margin-left: 10rpx;
  font-size: 20rpx;
}
/* 新闻列表 */
.news-item{
 display: flex;
 align-items: center;
 height: 200rpx;
 width: 686rpx;
 margin: 0 32rpx;
 border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.item-left{
  /* flex: 1.8; */
  width: 526rpx;
}
.newsItem-title{
color: #4D4E50;
/* height: 40rpx; */
font-size: 30rpx;
width: 100%;
}
.newsItem-source-date-wapper{
display: flex;
align-items: flex-start;
margin-top: 10rpx;
width: 100%;
}
.newsItem-source{
color: #90939E;
font-size: 25rpx;
}
.newsItem-date{
margin-left: 10rpx;
color: #90939E;
font-size: 25rpx;
}
.newsItem-image{
/* flex: 1.2; */
height: 138rpx;
width: 150rpx;
margin-left: 10rpx;
}
